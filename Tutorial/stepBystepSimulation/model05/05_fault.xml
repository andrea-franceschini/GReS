<?xml version="1.0" encoding="UTF-8"?>
<!-- Preprocess input for non-conforming multi-domain simulation -->

<Problem>


  <simParam>
    <Time
          Start="0."
          End ="10.0"
          DtInit="1.0"
          DtMin ="1e-5"
          DtMax ="1.0"
          incrementFactor = "1.25"
          choppingFactor = "2" />

    <Solver
            RelativeTolerance = "1.e-10"
            AbsoluteTolerance = "1.e-8"
            />
  </simParam>

  <Domain fileName = "model05/05_domLeft.xml"/>

  <Domain fileName = "model05/05_domRight.xml"/>


  <Interface>
    <SolidMechanicsContact
                           multiplierType="P0">

      <Master domainId="2" surfaceTag="5"/>
      <Slave  domainId="1" surfaceTag="6"/>

      <Output
              outputFile = "model05/Output05/Fault"
              printTimes = "1,5,10"
              saveHistory = "1"
              matFileName = "model05/Output05/historyFault"
              />

      <Coulomb
               cohesion = "0.0"
               frictionAngle = "30" />

      <ActiveSet
                 resetActiveSet = "0"
                 forceStickBoundary = "0" >

        <Tolerances
                    sliding = "1e-3"
                    normalGap = "1e-6"
                    normalTraction = "-1e-3"
                    tangentialViolation = "1e-5"
                    minLimitTraction = "1e-4"
                    areaChange = "1e-4"
                    maxActiveSetChange = "6"
                    />

      </ActiveSet>

    </SolidMechanicsContact>

  </Interface>

</Problem>
