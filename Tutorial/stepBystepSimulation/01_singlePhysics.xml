<?xml version="1.0" encoding="UTF-8"?>
<!-- This XML input file is a shortcut to preprocess the model for each domain
in a nonConforming simulation.
-->

<Problem>

  <simParam>
    <Time
          Start="0."
          End ="5.0"
          DtInit="0.25"
          DtMin ="1e-5"
          DtMax ="0.5"
          incrementFactor = "1.25"
          choppingFactor = "2" />

    <Solver
            RelativeTolerance = "1.e-10"
            AbsoluteTolerance = "1.e-8"
            />
  </simParam>


  <Materials >

    <Solid name = "sand">
      <PorousRock
                  porosity="0.3"
                  specificWeight="21"
                  permeability="1e-12"/>
    </Solid>

    <Fluid
           specificWeight = "0.0"
           compressibility = "4.4e-7"
           dynamicViscosity = "1.0e-6"
           />
  </Materials>



<BoundaryConditions>
  <BC
      name = "pressureBC"
      type = "Dirichlet"
      entityType = "ElementBC"
      variable = "pressure"
      >

    <BCentities
                bcList = "3"

                />

    <BCevent
             time = "0"
             value = "100"
             />
  </BC>

  <BC
      name = "TopLoad"
      type = "Neumann"
      entityType = "SurfBC"
      variable = "displacements"
      >

    <BCentities
                surfaceTags = "2"
                components = "z"
                />

    <BCevent
             time = "0"
             value = "-10"
             />

  </BC>

  <BC
      name = "LatFixedY"
      type = "Dirichlet"
      entityType = "NodeBC"
      variable = "displacements"
      >

    <BCentities
                surfaceTags = "3"
                components = "y"
                />

    <BCevent
             time = "0"
             value = "0"
             />
  </BC>

  <BC
      name = "LatFixedX"
      type = "Dirichlet"
      entityType = "NodeBC"
      variable = "displacements"
      >

    <BCentities
                surfaceTags = "4"
                components = "x"
                />

    <BCevent
             time = "0"
             value = "0"
             />
  </BC>

  <BC
      name = "BotFixed"
      type = "Dirichlet"
      entityType = "SurfBC"
      variable = "displacements"
      >

    <BCentities
                surfaceTags = "1"
                components = "x,y,z"
                />

    <BCevent
             time = "0"
             value = "0"
             />
  </BC>

</BoundaryConditions>



  <Output
          printTimes   = "1,2,3,4"
          outputFile   = "Output01/results"
          matFileName  = "Output01/history"
          saveHistory  = "1"
          />


  <Solver>
    <SinglePhaseFlowTPFA />
  </Solver>

  <Output>
  </Output>


</Problem>
