<?xml version="1.0" encoding="UTF-8"?>
<!-- This XML input file is a shortcut to preprocess the model for each domain
in a nonConforming simulation.
-->

<Problem>

  <simParam>
    <Time
          Start="0."
          End ="1.0e0"
          DtInit="1.0"
          DtMin ="1e0"
          DtMax ="1e0"
          />
  </simParam>

  <Materials>
    <Solid cellTags = "1" name = "mat">

      <Constitutive>
        <Elastic
                 youngModulus = "5e3"
                 poissonRatio = "0.25"
                 />
      </Constitutive>

    </Solid>
  </Materials>

  <BoundaryConditions>

    <BC
        name = "fixBottom"
        type = "Dirichlet"
        entityType = "SurfBC"
        variable = "displacements"
        >

      <BCentities
                  surfaceTags = "1"
                  components = "x,z"
                  />

      <BCevent
               time = "0"
               value = "0"
               />

    </BC>


    <BC
        name = "top_displacement"
        type = "Dirichlet"
        entityType = "SurfBC"
        variable = "displacements"
        >

      <BCentities
                  surfaceTags = "2"
                  components = "z"
                  />

      <BCevent
               time = "0"
               value = "-0.1"
               />

    </BC>

    <BC
        name = "plain_strain"
        type = "Dirichlet"
        entityType = "SurfBC"
        variable = "displacements"
        >

      <BCentities
                  surfaceTags = "3,4"
                  components = "y"
                  />

      <BCevent
               time = "0"
               value = "0.0"
               />

    </BC>


  </BoundaryConditions>


  <Solver>
    <Poromechanics />


    <EmbeddedFractureMechanics
                               penaltyNormal = "1e8"
                               penaltyTangential = "1e8"
                               outputFile = "OUT/constantSlidingFracture" >
      <Fracture
                origin = "1,2,1.7"
                normal    = "-0.707106781186547, 0, 0.707106781186547"
                lengthVec = "0, 1, 0"
                widthVec  = "0.707106781186548, 0, 0.707106781186548"
                dimensions = "10,10"
                cohesion = "0.0"
                frictionAngle = "5.71"
                />

</EmbeddedFractureMechanics>


  </Solver>

  <Output
          saveHistory = "1"
          outputFile = "OUT/patch"
          matFileName = "OUT/historyPatch"
          printTimes = "1"
          />

</Problem>
