<?xml version="1.0" encoding="UTF-8"?>
<Solver>
  <Sedimentation>
    
    <Domain>
      <Grid
          type = "classic"
          division = "30,30,2"
          size = "10,10,1"/>
      <Initial>
        <All materialFlag = "1" />
      </Initial>
      <NewCellHeightControl> 0.1 </NewCellHeightControl>
    </Domain>

    <Boundary>
      <BC name = "Top"
          type = "Dirichlet"
          surface = "ZM"
          variable = "pressure"
          value = "0." />
    </Boundary>
    
    <SedimentMap file = "Inputs/mapsSedimentation.xml" />
    
    <Output file = "Inputs/output.xml"/>
  </Sedimentation>
</Solver>

