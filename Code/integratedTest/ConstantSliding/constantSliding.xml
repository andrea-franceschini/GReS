<?xml version="1.0" encoding="UTF-8"?>

<Problem>

  <simParam>
    <Time
          Start="0.0"
          End ="1e0"
          DtInit= "1e0"
          DtMax ="1e0"
          DtMin ="1.0"
          relativeTolerance = "1e-11"
          absoluteTolerance = "1e-13"
          />
  </simParam>


  <!--Top domain-->
  <Domain>
    <Geometry
              fileName = "Input/topBlock.vtk"
              />
    <Gauss nGP = "3" />
    <Materials fileName = "Input/materials.xml" />
    <BoundaryConditions fileName = "Input/constantSlidingTopBCs.xml" />
    <!--<Output
              outputFile = "TopBlock"
              printTimes = "1"
              />-->
    <Solver>
      <Poromechanics />
    </Solver>
  </Domain>

  <!--Bottom domain-->
  <Domain>
    <Geometry fileName = "Input/bottomBlock.vtk" />
    <Gauss nGP = "3" />
    <Materials fileName = "Input/materials.xml" />
    <BoundaryConditions fileName = "Input/constantSlidingBottomBCs.xml" />
    <!--<Output
              outputFile = "BottomBlock"
              printTimes = "1"
              />-->
    <Solver>
      <Poromechanics />
    </Solver>
  </Domain>

  <Interface>
    <SolidMechanicsContact>

      <Master
              domainId = "2"
              surfaceTag = "3"
              />
      <Slave
             domainId = "1"
             surfaceTag = "1"
             />
      <Quadrature
                  type = "SegmentBasedQuadrature"
                  nGP = "6"
                  />

      <!--<Output
              outputFile = "Crack"
              printTimes = "1"
              />-->

      <Coulomb 
               cohesion = "0" 
               frictionAngle = "5.71" />

    </SolidMechanicsContact>


  </Interface>

