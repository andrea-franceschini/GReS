<?xml version="1.0" encoding="UTF-8"?>

<Problem>

  <simParam>
    <Time
          Start="0."
          End ="1.01e+1"
          DtInit="1.e-1"
          DtMin ="1.e-1"
          DtMax ="1.e+1"
          incrementFactor = "1.1"
          choppingFactor = "Default" />
    <Solver
            Theta = "Default"
            MaxNLIteration = "10"
            RelativeTolerance = "1.e-9"
            AbsoluteTolerance = "1.e-9" />
  </simParam>

  <Output
          outputFile = "Output/flowNonConforming"
          matFileName = "Output/flowNonConforming"
          saveHistory = "1"
          printTimes = "0.5,1,2,5,10,50"
          />

  <!--Top domain-->
  <Domain>
    <Geometry
              fileName = "Input/DomainTop/topLayer.vtk"
              />
    <Gauss nGP = "1" />
    <Materials fileName = "Input/DomainTop/materialsListTop.xml" />
    <BoundaryConditions fileName = "Input/DomainTop/bcTop.xml" />
    <Solver>
      <SinglePhaseFlowFEM />
    </Solver>
  </Domain>

  <!--Bottom domain-->
  <Domain>
    <Geometry
              fileName = "Input/DomainBot/bottomLayer.vtk"
              />
    <Gauss nGP = "1" />
    <Materials fileName = "Input/DomainBot/materialsListBottom.xml" />
    <BoundaryConditions fileName = "Input/DomainBot/bcBot.xml" />
    <Solver>
      <SinglePhaseFlowFEM />
    </Solver>
  </Domain>

  <Interface>
    <MeshTying
               multiplierType = "dual">

      <Master
              domainId = "1"
              surfaceTag = "1"
              />
      <Slave
             domainId = "2"
             surfaceTag = "1"
             />
      <Quadrature
                  type = "SegmentBasedQuadrature"
                  nGP = "4"
                  />

    </MeshTying>


  </Interface>

</Problem>

