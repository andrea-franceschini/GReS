<?xml version="1.0" encoding="UTF-8"?>

<Problem>

  <simParam>
    <Time
          Start="0.0"
          End ="1e0"
          DtInit= "1e0"
          DtMax ="1e0"
          DtMin ="1.0"
          />
    <Solver
            relativeTolerance = "1e-11"
            absoluteTolerance = "1e-13"
            />
  </simParam>


  <!--Top domain-->
  <Domain>
    <Geometry
              fileName = "Inputs/DomainTop/topLayer.vtk"
              />
    <Gauss nGP = "1" />
    <Materials fileName = "Inputs/DomainTop/materialsListTop.xml" />
    <BoundaryConditions fileName = "Inputs/DomainTop/bcTop.xml" />
    <Output
              fileName = "Inputs/DomainTop/outTop.xml"
              />
    <Solver>
      <SinglePhaseFlowFEM />
    </Solver>
  </Domain>

  <!--Bottom domain-->
    <Domain>
    <Geometry
              fileName = "Inputs/DomainBot/bottomLayer.vtk"
              />
    <Gauss nGP = "1" />
    <Materials fileName = "Inputs/DomainBot/materialsListBottom.xml" />
    <BoundaryConditions fileName = "Inputs/DomainBot/bcBot.xml" />
    <Output
              fileName = "Inputs/DomainBot/outBottom.xml"
              />
    <Solver>
      <SinglePhaseFlowFEM />
    </Solver>
  </Domain>

  <Interface>
    <MeshTying>

      <Master
              domainId = "1"
              surfaceTag = "1"
              />
      <Slave
             domainId = "2"
             surfaceTag = "1"
             />
      <Quadrature
                  type = "SegmentBasedQuadrature"
                  nGP = "4"
                  multiplierType = "dual"
                  />

      <Output fileName = "Outputs/interface"
              />

    </MeshTying>


  </Interface>

</Problem>

